{
  "flags": [
    {
      "name": "client",
      "short": "c",
      "description": "Specifies a client to build for.",
      "switch": false,
      "valid": [
        "^all$",
        "^bd$",
        "^better[dD]iscord$",
        "^stylus$"
      ],
      "default": "all"
    },
    {
      "name": "filePath",
      "short": "p",
      "description": "Specifies the path of a Sass file.",
      "switch": false,
      "valid": [".*(\\.s[ac]ss|\/)"]
    },
    {
      "name": "help",
      "short": "h",
      "description": "Shows this help message.",
      "switch": true
    },
    {
      "name": "output",
      "short": "o",
      "description": "Specifies the folder path of the output file.",
      "switch": false,
      "valid": ["^[^/\\\\].+$"],
      "default": "./dist"
    },
    {
      "name": "plugins",
      "short": "P",
      "description": "Selects PostCSS plugins.",
      "switch": false,
      "valid": ["^\\[.*\\]$"],
      "default": "[ 'postcss/generic-classes({keepOriginal: false})', 'cssnano' ]"
    },
    {
      "name": "test",
      "description": "Compiles the theme without saving.",
      "switch": true,
      "default": false
    },
    {
      "name": "watch",
      "description": "Watches the specified path for changes.",
      "switch": true,
      "default": false
    }
  ]
}
